@helper MenuItem(string text, string subtext, string icon, string url)
{
    <li class="@Request.ActiveCssClass(url)">
        <a href="@Request.ResolveUrl(url)">
            <div class="maintext">
                @text
                <span class="glyphicon glyphicon-@icon"></span>
            </div>
            <div class="subtext">@subtext</div>
        </a>
    </li>
}
<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@((ViewBag.Title != null ? ViewBag.Title + " - " : "") + "Neptuo")</title>

    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <link href="~/Content/design.css" rel="stylesheet" />
    <link href="~/Content/folder.css" rel="stylesheet" />
    <link href="~/Content/box.css" rel="stylesheet" />
    <link href="~/Content/blog.css" rel="stylesheet" />
    <link href="~/Content/responsivness.css" rel="stylesheet" />
    <link href="~/Content/syntax.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <a class="navbar-brand  @Request.ActiveCssClass("~/", true)" href="~/">
                <img src="~/Content/Images/Logo.png" alt="Neptuo logo" height="80" />
            </a>
            <ul>
                @MenuItem("Projects", "Projects we are working on", "cloud", "~/project")
                @MenuItem("Services", "Our services and references", "globe", "~/service")
                @MenuItem("Blog", "Thoughts to share", "bookmark", "~/blog")
            </ul>
        </div>
    </nav>

    <div class="body">
        <form>

            @RenderBody()

        </form>
    </div>

    <footer>
        <div class="container">
            <div class="left">
                Neptuo &copy; 2010 - 2016
            </div>
            <div class="right">
                Created by <a target="_blank" href="http://mara.neptuo.com">Marek Fišera</a>
            </div>
            <div class="clear"></div>
        </div>
    </footer>

    <script>

        function onSwitcherClicked(e) {
            var folder = this.parentElement.parentElement;
            folder.classList.toggle('folder-collapsed');
        }

        var switchers = document.querySelectorAll('.folder-switch');
        for (var i = 0; i < switchers.length; i++) {
            var switcher = switchers[i];
            switcher.addEventListener('click', onSwitcherClicked);
        }

    </script>
