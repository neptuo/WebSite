@model IEnumerable<Neptuo.WebSite.Models.Blogging.PostModel>
@{
    ViewBag.Title = "Thoughts to share";
}

<div class="intro">
    <div class="intro-content container">
        <h1>Blog...</h1>
        <p>
            Thoughts to share
        </p>
    </div>
</div>


<div class="container">
    @foreach (var post in Model)
    {
        <div class="folder">
            <h2 class="folder-heading">
                <a href="@Url.RouteUrl("BlogPost", new { releaseDate = post.ReleaseDate.ToString("yyyy-MM-dd"), slug = post.Url })">@post.Title</a>
            </h2>
            <article>@post.Description</article>
        </div>
    }
</div>
